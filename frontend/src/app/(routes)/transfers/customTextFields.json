          "fontWeight": 400
        },
        "& .MuiOutlinedInput-notchedOutline": {
          "border": "none"
        },
        "& .MuiOutlinedInput-root": {
          "border": "1px solid transparent",
          "borderRadius": "16px"
        },
        "& .Mui-focused": {
          "border": "1px solid #ffffff4a",
          "borderRadius": "16px"
        }
      },
      "inputProps": {
        "sx": {
          "input": {
            "minHeight": "30px",
            "color": "white",
            "fontSize": "16px",
            "paddingX": 2,
            "paddingY": 1
          }
        }
      }
    },
