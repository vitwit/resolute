      },
      "textFieldClassName": "bg-[#FFFFFF0D] rounded-2xl",
      "textFieldSize": "small",
      "placeHolder": "",
      "textFieldCustomMuiSx": {
        "& .MuiTypography-body1": {
          "color": "rgba(255, 255, 255, 0.75)",
