      "textFieldClassName": " rounded-2xl flex flex-col flex-1",
      "rules": {},
      "textFieldSize": "small",
      "placeHolder": "Enter memo here (optional)",
      "textFieldCustomMuiSx": {
        "& .MuiInputBase-input": {
          "color": "white"
        },
        "& .MuiInputLabel-root": {
          "color": "white"
